{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "jsx": "react",
    "experimentalDecorators": true,
    "noImplicitOverride": true,
    "downlevelIteration": true,
    "strictFunctionTypes": true,
    "sourceMap": true,
    "strict": true,
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "noUnusedLocals": true
    // "isolatedModules": true
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
